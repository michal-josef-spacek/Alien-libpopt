use alienfile;

plugin 'PkgConfig' => 'popt';

share {
	start_url 'https://ftp.rpm.org/popt/releases/popt-1.x/';
	plugin Download => (
		filter => qr/^popt-.*\.tar\.gz$/,
		version => qr/^popt-([0-9\.]+)/,
		bootstrap_ssl => 1,
	);

	plugin 'Extract' => 'tar.gz';
	plugin 'Build::Make' => 'gmake';
	plugin 'Build::Autoconf';
	build [
		'%{configure} --enable-static --enable-shared',
		'%{make}',
		'%{make} install',
	];
};
